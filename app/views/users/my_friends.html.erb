<%#= render 'friends/lookup' %>

<% if @friendships.size > 0 %>
<table class="table table-strip">
    <thread>
        <tr>
            <th colspan ="3" class="page-header">
            <h2>My Friends</h2> 
            </th>
        </tr>
        <tr><th>Name</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thread>
    <tbody>
        <% @friendships.each do |friend| %>
        <tr>
            <td><%= friend.full_name %></td>
            <td><%= friend.email %></td>
            <td>
                <%= link_to 'View Profile', user_path(friend), :class => 'btn btn-xs btn-danger' %>
                <%= link_to 'Remove', friendship_path(friend), 
                                      :method => :delete, 
                                      :data => { :confirm => "Are You Sure?" },
                                      :class => 'btn btn-xs btn-danger' %>
            </td>
            <% end %>
        </tr>

    </tbody>
</table>



    <% else %>

    <div class='row col-lg-12'>

    <p class="lead">You don't have any friends yet. Please add some!</p>

    </div>

<% end %>

